NODE_ENV=production
AUTH_BACKEND=mongo
NODE_VERSION=20

# MongoDB (use Atlas SRV in production; example below). If testing locally, you can use the localhost URI instead.
# Provided Atlas connection (replace <db_password> with your password, URL-encode special chars):
MONGODB_URI=mongodb+srv://manasadhikari087_db_user:<db_password>@cluster0.yonzitr.mongodb.net/ongc-internship?retryWrites=true&w=majority&appName=Cluster0

# Security
